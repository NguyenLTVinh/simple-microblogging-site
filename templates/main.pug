doctype html
html(lang="en")
    head
        title All Posts
        script(src="/js/main.js")
    body
        h1 All Posts
        form(action="/create-post", method="get")
            button(type="submit") Create Post
        form(method="get", action="/")
            select(name="sort")
                option(value="created_at") Newest
                option(value="like_count") Most Liked
            button(type="submit") Sort
        .posts-list
            each post in posts
                .post
                    p.post-content(onclick=`goToPost('${post.id}')`)= post.content
                    p.post-author= post.username
                    button(onclick=`likePost('${post.id}')`) Like
                    span(id=`like-count-${post.id}`)=  post.like_count
        // Pagination buttons
        if pagination.prev
            a(href=`/?page=${pagination.prev}`) Previous
        if pagination.next
            a(href=`/?page=${pagination.next}`) Next
